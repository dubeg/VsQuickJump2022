<platform:DialogWindow 
    x:Class="QuickJump2022.Forms.SearchFormWpf"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:localb="clr-namespace:QuickJump2022.Behaviors"
    xmlns:localm="clr-namespace:QuickJump2022.Models"
    xmlns:platform="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
    xmlns:shell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
    xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
    xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
    xmlns:imagecatalog="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.ImageCatalog"
    xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
    xmlns:utilities="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Utilities"
    mc:Ignorable="d"
    Title="QuickJump Search" 
    Width="700"
    BorderThickness="1"
    BorderBrush="{DynamicResource {x:Static platform:ThemedDialogColors.WindowBorderBrushKey}}"
    WindowStyle="None"
    Background="Transparent"
    ShowInTaskbar="False"
    ResizeMode="NoResize"
    Loaded="Window_Loaded"
    platform:FocusHelper.EnableActivationSynchronization="True"
    platform:FocusHelper.FocusTarget="{Binding ElementName=txtSearch}"
    SizeToContent="Height"
    toolkit:Themes.UseVsTheme="True"
    Deactivated="DialogWindow_Deactivated"
    HasDialogFrame="False"
    theming:ImageThemingUtilities.ImageBackgroundColor="{DynamicResource {x:Static platform:ThemedDialogColors.WindowPanelColorKey}}"
    RenderOptions.BitmapScalingMode="HighQuality"
    RenderOptions.ClearTypeHint="Auto"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextHintingMode="Auto"
    TextOptions.TextRenderingMode="Auto"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search TextBox -->
        <TextBox 
            x:Name="txtSearch" 
            Grid.Row="0"
            BorderThickness="0"
            FontFamily="{Binding FontFamily}"
            FontSize="{Binding FontSize}"
            VerticalContentAlignment="Center"
            TextChanged="txtSearch_TextChanged"
            PreviewKeyDown="txtSearch_PreviewKeyDown"
            />

        <!-- Items ListBox -->
        <ListBox 
            x:Name="lstItems" 
            Grid.Row="1"
            localb:ListViewBehaviors.MaxVisibleItems="{Binding PageSize}"
            ItemsSource="{Binding Items}"
            BorderThickness="0"
            BorderBrush="Transparent"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.IsDeferredScrollingEnabled="True"
            ScrollViewer.CanContentScroll="True"
            VirtualizingStackPanel.IsVirtualizing="True"
            VirtualizingStackPanel.VirtualizationMode="Recycling"
            VirtualizingStackPanel.ScrollUnit="Pixel"
            VirtualizingStackPanel.CacheLength="20"
            VirtualizingStackPanel.CacheLengthUnit="Item"
            PreviewMouseLeftButtonUp="lstItems_PreviewMouseLeftButtonUp"
            PreviewKeyUp="lstItems_PreviewKeyUp">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Padding" Value="0,2"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type localm:ListItemViewModel}">
                    <Grid Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <imaging:CrispImage 
                                   Grid.Column="0" 
                                   Moniker="{Binding IconMoniker}" 
                                   UseLayoutRounding="True"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   Width="16" 
                                   Height="16" 
                                   Margin="5,0,5,0"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding ShowIcon, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <!-- Name and Type -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding DisplayName}" 
                                           Foreground="{Binding NameForeground}"
                                           FontFamily="{Binding FontFamily, RelativeSource={RelativeSource AncestorType=platform:DialogWindow}}"
                                           FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=platform:DialogWindow}}"
                                           TextTrimming="CharacterEllipsis"
                                           />
                            <TextBlock Text="{Binding TypeSuffix}" 
                                           Foreground="{Binding TypeForeground}"
                                           FontFamily="{Binding FontFamily, RelativeSource={RelativeSource AncestorType=platform:DialogWindow}}"
                                           FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=platform:DialogWindow}}"
                                           Margin="0,0,5,0"/>
                        </StackPanel>

                        <!-- Description -->
                        <TextBlock Grid.Column="2" 
                                       Text="{Binding DescriptionText}" 
                                       Foreground="{Binding DescriptionForeground}"
                                       FontFamily="{Binding FontFamily, RelativeSource={RelativeSource AncestorType=platform:DialogWindow}}"
                                       FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=platform:DialogWindow}}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</platform:DialogWindow>
